#!/bin/sh
## c3
## Copyright 2022 Thomas de Grivel <thoxdg@gmail.com>

set -e

. ../config.subr

PROG=c3_test
PROG_DEBUG=c3_test.debug

SOURCES="$(ls *.c | tr '\n' ' ')"
echo "SOURCES = $SOURCES" >> ${CONFIG_MK}

OBJECTS="$(c2lo "$SOURCES")"
echo "OBJECTS = $OBJECTS" >> ${CONFIG_MK}

OBJECTS_DEBUG="$(c2ext .debug.lo "$SOURCES")"
echo "OBJECTS_DEBUG = $OBJECTS_DEBUG" >> ${CONFIG_MK}

check_libbsd

# Default config
CPPFLAGS="${CPPFLAGS:=}"
ENV_CFLAGS="${CFLAGS:=}"
DEFAULT_CFLAGS="-O2 -pipe"
LDFLAGS="${LDFLAGS:=}"
LIBS="${LIBS:=}"

# Common config for all targets
CFLAGS="$CFLAGS -W -Wall -Werror -std=c99 -pedantic"
if pkg-config libbsd-overlay; then
    CPPFLAGS="$CPPFLAGS -D_DEFAULT_SOURCE -D__USE_MISC"
    CFLAGS="$CFLAGS $(pkg-config --cflags libbsd-overlay)"
    LIBS="$LIBS $(pkg-config --libs libbsd-overlay)"
fi

# Debug config
CFLAGS_DEBUG="$CFLAGS -DDEBUG -O0 -ggdb"
LDFLAGS_DEBUG="$LDFLAGS"
LIBC3_DEBUG=../libc3/libc3.debug.a
LIBS_DEBUG="$LIBS $LIBC3_DEBUG"
LIBS_DEBUG="$LIBS ../libc3/libc3.debug.a"

# Main config
if [ "x$ENV_CFLAGS" = "x" ]; then
    CFLAGS="$CFLAGS $DEFAULT_CFLAGS"
fi
CFLAGS="$CFLAGS -DNDEBUG"
LIBC3=../libc3/libc3.a
LIBS="$LIBS $LIBC3"

echo "CPPFLAGS = $CPPFLAGS" >> ${CONFIG_MK}
echo "CFLAGS = $CFLAGS" >> ${CONFIG_MK}
echo "LDFLAGS = $LDFLAGS" >> ${CONFIG_MK}
echo "LIBS = $LIBS" >> ${CONFIG_MK}
echo >> ${CONFIG_MK}
echo "CFLAGS_ASAN = $CFLAGS_ASAN" >> ${CONFIG_MK}
echo "LDFLAGS_ASAN = $LDFLAGS_ASAN" >> ${CONFIG_MK}
echo "LIBS_ASAN = $LIBS_ASAN" >> ${CONFIG_MK}
echo >> ${CONFIG_MK}
echo "CFLAGS_COV = $CFLAGS_COV" >> ${CONFIG_MK}
echo "LDFLAGS_COV = $LDFLAGS_COV" >> ${CONFIG_MK}
echo "LIBS_COV = $LIBS_COV" >> ${CONFIG_MK}
echo >> ${CONFIG_MK}
echo "CFLAGS_DEBUG = $CFLAGS_DEBUG" >> ${CONFIG_MK}
echo "LDFLAGS_DEBUG = $LDFLAGS_DEBUG" >> ${CONFIG_MK}
echo "LIBS_DEBUG = $LIBS_DEBUG" >> ${CONFIG_MK}

for SRC in $SOURCES; do
    SRC_LO="$(c2lo "$SRC")"
    echo >> ${CONFIG_MK}
    lo_rule "$SRC" >> ${CONFIG_MK}
    echo "	${LIBTOOL} --tag=CC --mode=compile \${CC} \${CPPFLAGS} \${CFLAGS} -c $SRC -o $SRC_LO" >> ${CONFIG_MK}
    SRC_DEBUG_LO="$(c2ext .debug.lo "$SRC")"
    echo >> ${CONFIG_MK}
    ext_rule .debug.lo "$SRC" >> ${CONFIG_MK}
    echo "	${LIBTOOL} --tag=CC --mode=compile \${CC} \${CPPFLAGS} \${CFLAGS_DEBUG} -c $SRC -o $SRC_DEBUG_LO" >> ${CONFIG_MK}
done

echo >> ${CONFIG_MK}
echo "$PROG: $LIBC3 $OBJECTS" >> ${CONFIG_MK}
echo "	${LIBTOOL} --tag=CC --mode=link \${CC} \${LDFLAGS} ${OBJECTS} ${LIBS} -o $PROG" >> ${CONFIG_MK}

echo >> ${CONFIG_MK}
echo "$PROG_DEBUG: $LIBC3_DEBUG $OBJECTS_DEBUG" >> ${CONFIG_MK}
echo "	${LIBTOOL} --tag=CC --mode=link \${CC} \${LDFLAGS_DEBUG} ${OBJECTS_DEBUG} ${LIBS_DEBUG} -o $PROG_DEBUG" >> ${CONFIG_MK}
