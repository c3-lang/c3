set -e

export C3_TOP="$(pwd)"

( cd libtommath && ./configure; )
( cd ucd2c && ./configure; )
( cd libc3 && ./configure; )
( cd ic3 && ./configure; )
( cd c3s && ./configure; )
( cd test && ./configure; )

. ./config.subr

C3_DIRS="ic3 libc3 test"
C3_CONFIGURES="$(find . -name "configure" | tr '\n' ' ')"
C3_MAKEFILES="$(find . -name "Makefile" | tr '\n' ' ')"
C3_C_SOURCES="$(find $C3_DIRS -name "[a-z]*.c" -or -name "[a-z]*.h" -or -name "[a-z]*.c.in" -or -name "[a-z]*.h.in" | tr '\n' ' ')"
C3_C_SOURCES="$C3_C_SOURCES ucd2c/ucd.h"

echo "C3_CONFIGURES = $C3_CONFIGURES" >> ${CONFIG_MK}
echo "C3_MAKEFILES = $C3_MAKEFILES" >> ${CONFIG_MK}
echo "C3_C_SOURCES = $C3_C_SOURCES" >> ${CONFIG_MK}

C3_VERSION="$(cat c3.version)"
echo "C3_VERSION = $C3_VERSION" >> ${CONFIG_MK}
echo "c3-${C3_VERSION}.tar.gz: $(tr '\n' ' ' < c3.index)" >> ${CONFIG_MK}

update_config_mk
